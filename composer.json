{
    "name": "openpesa/pesa",
    "description": "Pesa PHP SDK",
    "keywords": [
        "api",
        "mobile-money",
        "tanzania",
        "pesa",
        "pesa-sdk",
        "pesa-sdk-php",
        "openpesa"
    ],
    "homepage": "https://github.com/openpesa/pesa",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Alpha Olomi",
            "email": "alphaolomi@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Leylow Lujuo",
            "email": "leyluj21@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2|^8.0",
        "ext-json": "*",
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "^6.0|^7.4",
        "phpseclib/phpseclib": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5|^9.5"
    },
    "autoload": {
        "psr-4": {
            "Openpesa\\SDK\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Openpesa\\SDK\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
