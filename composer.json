{
    "name": "openpesa/pesa",
    "description": "Pesa PHP SDK",
    "keywords": [
        "mobile-money",
        "openpesa"
    ],
    "homepage": "https://github.com/openpesa/pesa",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Alpha Olomi",
            "email": "alphaolomi@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Leylow Lujuo",
            "email": "leyluj21@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5|^9.5",
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "Openpesa\\Sdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Openpesa\\Sdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
